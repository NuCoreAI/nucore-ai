{
  "type": "function",
  "function": {
    "name": "nucore_router_tool",
    "description": "Results from searching the device database for top 10 most relevant devices based on user query",
    "parameters": {
      "type": "object",
      "required": ["intent","devices"],
      "properties": {
        "intent": {
          "type": "string",
          "description": "Primary intent of the user query. See **`intent` DETERMINATION RULES**",
          "enum": [
            "command_control",
            "routine_automation",
            "real_time_status"
          ]
        },
        "devices": {
          "type": "array",
          "description": "See **DEVICE SELECTION RULES**",
          "items": {
            "type": "object",
            "required": ["device_id", "score"],
            "properties": {
              "device_id": {
                "type": "string",
                "description": "The unique device identifier"
              },
              "score": {
                "type": "number",
                "description": "Relevance score **from 0.0 to 1.0 inclusive** (higher is better)"
              }
            }
          }
        }
      }
    }
  }
}
